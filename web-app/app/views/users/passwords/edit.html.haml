.focusedform.change-password
  .verticalcenter
    = link_to "#{Settings.base_url}" do
      =image_tag('logo-big.jpg',class: 'img brand')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { :id => 'reset_pwd', method: :put }) do |f|
      .panel.panel-primary.remove-border
        .panel-body.remove-border
          = devise_error_messages!
          %h4.text-center.header-bottom-margin Reset Password
          .form-horizontal
            = f.hidden_field :reset_password_token
            .field.form-group
              .col-sm-12
                .input-group
                  %span.input-group-addon
                    %i.fa.fa-lock
                  = f.password_field :password, autofocus: true, placeholder: 'New password', :class =>'form-control'
            .field.form-group
              .col-sm-12
                .input-group
                  %span.input-group-addon
                    %i.fa.fa-lock
                  = f.password_field :password_confiramtion, autofocus: true, :placeholder => 'Confirm password', :class =>'form-control'
            .panel-footer
              %center
                .actions
                  = f.submit 'Change Password', :class =>'btn btn-primary btn-block'
                %br/
                %i.fa.fa-arrow-left.arw
                - if controller_name != 'sessions'
                  = link_to "Back to Login", new_session_path(resource_name)
